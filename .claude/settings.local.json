{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "deepwiki",
    "grep",
    "infisical",
    "firecrawl",
    "github",
    "coderabbitai",
    "netdata"
  ],
  "permissions": {
    "allow": [
      "Bash(tailscale:*)",
      "Bash(ansible:*)",
      "Bash(git add:*)",
      "Bash(uv run pre-commit run:*)",
      "Bash(git reset:*)",
      "Bash(nomad node status:*)",
      "Bash(nomad job run:*)",
      "Bash(nomad:*)",
      "Bash(consul kv put:*)",
      "Bash(consul catalog:*)",
      "Bash(curl:*)"
    ]
  },
  "statusLine": {
    "command": "input=$(cat); printf \"$(echo \"$input\" | jq -r '.model.display_name') | $(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\") | $(whoami)@$(hostname -s)\"",
    "type": "command"
  }
}
