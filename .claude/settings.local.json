{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "deepwiki",
    "infisical",
    "firecrawl",
    "github",
    "coderabbitai",
    "mise"
  ],
  "permissions": {
    "allow": [
      "Bash(tailscale:*)",
      "Bash(ansible:*)",
      "Bash(git add:*)",
      "Bash(uv run pre-commit run:*)",
      "Bash(git reset:*)",
      "Bash(nomad node status:*)",
      "Bash(nomad job run:*)",
      "Bash(nomad:*)",
      "Bash(consul kv put:*)",
      "Bash(consul catalog:*)",
      "Bash(curl:*)",
      "mcp__coderabbitai__resolve_comment",
      "Bash(uv run ruff check:*)",
      "Bash(uv run:*)",
      "Bash(shellcheck:*)",
      "Bash(find:*)",
      "Bash(npm install:*)",
      "Bash(markdownlint:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "mcp__github__create_issue",
      "mcp__coderabbitai__get_coderabbit_reviews",
      "mcp__coderabbitai__get_review_comments",
      "Bash(rg:*)",
      "mcp__github__get_job_logs",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(npx markdownlint-cli2:*)",
      "mcp__github__get_issue",
      "Bash(grep:*)",
      "mcp__github__list_issues",
      "mcp__github__search_issues"
    ]
  },
  "statusLine": {
    "command": "input=$(cat); printf \"$(echo \"$input\" | jq -r '.model.display_name') | $(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\") | $(whoami)@$(hostname -s)\"",
    "type": "command"
  }
}
