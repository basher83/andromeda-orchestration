{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(tailscale:*)",
      "Bash(ansible:*)",
      "Bash(git add:*)",
      "Bash(uv run pre-commit run:*)",
      "Bash(git reset:*)",
      "Bash(nomad node status:*)",
      "Bash(nomad job run:*)",
      "Bash(nomad:*)",
      "Bash(consul kv put:*)",
      "Bash(consul catalog:*)",
      "Bash(curl:*)",
      "mcp__coderabbitai__resolve_comment",
      "Bash(uv run ruff check:*)",
      "Bash(uv run:*)",
      "Bash(shellcheck:*)",
      "Bash(find:*)",
      "Bash(npm install:*)",
      "Bash(markdownlint:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "mcp__github__create_issue"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "deepwiki",
    "grep",
    "infisical",
    "firecrawl",
    "github",
    "coderabbitai",
    "netdata"
  ],
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf \"$(echo \"$input\" | jq -r '.model.display_name') | $(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\") | $(whoami)@$(hostname -s)\""
  }
}