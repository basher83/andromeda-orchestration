#!/usr/bin/env bash
# Example 1Password Connect environment configuration
# Copy this file to set-1password-env.sh and update with your values

set -euo pipefail

# Set 1Password Connect environment variables
export OP_CONNECT_HOST="http://your-connect-server:8080"
export OP_CONNECT_TOKEN="your-connect-jwt-token-here"
export OP_VAULT_ID="your-vault-uuid"  # Optional: default vault for secrets

echo "1Password Connect environment variables set"
